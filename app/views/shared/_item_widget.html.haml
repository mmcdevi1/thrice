.item-widget.text-center
  .row
    - @listings.each do |listing|
      .col-md-3
        .item-image
          = link_to image_tag(listing.image.url(:medium), class: 'img-responsive'), listing
        .item-title
          %p= listing.name
        .item-seller
          %p
            %span Listed by
            = link_to listing.user.name, listing.user
        .item-price
          %p= number_to_currency(listing.price)
        = form_for @order_item, remote: true do |f|
          = f.hidden_field :listing_id, value: listing.id
          = f.submit "Add to Cart", class: "btn btn-info"
