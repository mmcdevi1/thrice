.item-widget.text-center
  .row
    - @listings.each do |listing|
      .col-md-3
        .item-image
          - if listing.listing_images.first && listing.listing_images.first.listing_image_file_name != nil
            = link_to image_tag(listing.listing_images.first.listing_image.url(:medium), class: 'img-responsive'), listing
        .item-title
          %p= listing.name
        .item-price
          %p
            = number_to_currency(listing.selling_price)
            %span{style: 'margin: 0 10px'}= "|"
            = link_to listing.user.name, listing.user
        / = form_for @order_item, remote: true do |f|
        /   = f.hidden_field :listing_id, value: listing.id
        /   = f.submit "Add to Cart", class: "btn btn-info"
