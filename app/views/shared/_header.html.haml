%header#header.app-header.navbar{:role => "menu"}
  = render 'shared/top_header'
  #navbar_white.wrapper
    .navbar-header
      %a.navbar-brand.text-lt{:href => "/"}
        = image_tag('thrice-logo-test3.png')
      %button.pull-left.visible-xs{"data-target" => ".app-aside", "ui-scroll-to" => "app", "ui-toggle-class" => "off-screen"}
        %i.glyphicon.glyphicon-align-justify
      .pull-right{style: 'padding:15px 20px 0 0'}
        .cart-text
          = render 'layouts/cart_text'
    .row.collapse.pos-rlt.navbar-collapse.row-menu
      .col-sm-2
        %ul.nav.navbar-nav
          %a.navbar-brand.text-lt{:href => "/"}
            = image_tag('thrice-logo-test3.png')
      .col-sm-8
        %ul.nav.text-center
          - Category.all.each do |category|
            %li
              = link_to category.title, category
      .col-sm-2
        .pull-right
          %ul.nav.text-center
            %li.cart-text
              = render 'layouts/cart_text'
