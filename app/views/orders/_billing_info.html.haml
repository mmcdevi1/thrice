.billing-info
  %h5 Billing
  .row
    .col-md-12
      .form-group
        = f.label :cc_name, 'Name (As it appears on your card)'
        = f.text_field :cc_name, class: 'form-control'
    .col-md-12
      .form-group
        %label Credit Card Number
        %input.form-control.card-number{name: nil, type: 'text', data: {stripe: 'number'}}
  .row
    .col-md-4
      .form-group
        %label Month
        = select_month(Date.today, {add_month_numbers: true}, name: nil, class: 'form-control card-expiry-month')
    .col-md-4
      .form-group
        %label Year
        = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 20}, name: nil, class: 'form-control card-expiry-year')
    .col-md-4
      .form-group
        = f.label :cc_cvv, 'CVC Code'
        %input.form-control.card-cvc{name: nil, type: 'text', data: {stripe: 'cvc'}}