.shipping-address
  %h5 Shipping Address
  .row
    .col-md-6
      .form-group
        = f.label :first_name
        = f.text_field :first_name, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :address
    = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :second_address, 'Apt, Suite, etc.'
    = f.text_field :second_address, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :city
        = f.text_field :city, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :state
        = f.text_field :state, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :zipcode
        = f.text_field :zipcode, class: 'form-control'
  .form-group
    = f.label :phone_number
    = f.text_field :phone_number, class: 'form-control'