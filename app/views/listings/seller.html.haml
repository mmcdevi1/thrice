%table.table.table-striped.table-bordered
  %tr
    %th.center Image
    %th.center Name
    %th.center Description
    %th.center Price
    %th.center Action
  - @listings.each do |listing|
    %tr
      %td
        = image_tag listing.image.url(:thumb)
      %td= listing.name
      %td= listing.description
      %td= number_to_currency(listing.price)
      %td
        .btn-group
          %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
            Action
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li= link_to "View", listing, class: "btn btn-link"
            %li= link_to "Edit", edit_listing_path(listing), class: "btn btn-link"
            %li= link_to 'Destroy', listing, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link"
%br/
- if user_signed_in?
  = link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true }
