.wrapper.m-b
  %h4.text-center Edit Profile
.row
  .col-sm-8.col-sm-offset-2
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = devise_error_messages!
      %section
        Basic Information
      .form-group
        %label.control-label First Name
        = f.text_field :first_name, class: "form-control"
      .form-group
        %label.control-label Last Name
        = f.text_field :last_name, class: "form-control"
      .form-group
        %label.control-label Username
        = f.text_field :username, class: "form-control"
      .form-group
        %label.control-label Email
        = f.email_field :email, class: "form-control"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        .form-group
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      %section
        Shipping Address
      .form-group
        %label.control-label Shipping Address
        = f.text_field :shipping_address, class: "form-control"
      .form-group
        %label.control-label City
        = f.text_field :city, class: "form-control"
      .form-group
        %label.control-label State
        = f.text_field :state, class: "form-control"
      .form-group
        %label.control-label Zipcode
        = f.text_field :zipcode, class: "form-control"
      .form-group
        = f.submit "Update", class: "btn btn-info btn-lg"
