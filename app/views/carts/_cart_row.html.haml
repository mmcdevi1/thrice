%tr
  %td.item-image
    - if listing.listing_images.first && listing.listing_images.first.listing_image_file_name != nil
      = image_tag(listing.listing_images.first.listing_image.url(:small), class: 'img-responsive')
  %td
    %h5= listing.name
    %p
      %span Condition:
      New with tags
  %td
    %h6= listing.user.name
  %td
    %h6= number_to_currency order_item.total_price
  %td= link_to "x", order_item, { method: :delete, remote: true }